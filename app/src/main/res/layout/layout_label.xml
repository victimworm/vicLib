<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_black_border"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/layout_label_logo"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:src="@drawable/logo_app_login_update" />

        <ImageView
            android:id="@+id/layout_label_barcode"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/layout_label_txt_alias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/layout_label_img_truck"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/label_truck" />

            <TextView
                android:id="@+id/layout_label_txt_router_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="7dp"
                android:paddingTop="3dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="35dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/layout_label_txt_shop_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/layout_label_txt_customer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=" "
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/layout_label_txt_production_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>